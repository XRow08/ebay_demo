{{>_menu}}
<div class="sub-bar">
    <p>Seller's Dashboard</p><div>{{>_msg}}</div>
</div>
    <div class="content">
        <div class="profile">
            <img src="/images/avatar.svg">
            <div class="info">
                <h1>Account information</h1>
                <p><strong>Username:</strong>  {{username}}</p>
                <a href="/profile/edit/{{id}}" align="center">Edit Password</a>
            </div>
            <br><br>
            <div class="social-accounts"><br> 
                <div class="social-title">
                    <h1>Social Account Profiles</h1>
                    <div class="accounts">
                        {{#if user.social}}
                            <div class="account">
                                <p><strong>Telegram username: </strong>{{user.social.Telegram}}</p>
                                <br><hr><br>
                                <p><strong>Whatsapp Number: </strong>{{user.social.Whatsapp}}</p>
                            </div>
                        {{else}}
                        <p>You dont have a account</p>
                        {{/if}}
                    </div>
                    <a href="/profile/addsocial/{{id}}" align="center">Add Social</a>
                </div>
                {{#each erros}}
                <p>{{text}}</p>
                {{/each}}
            </div>
        </div>
    </div>

